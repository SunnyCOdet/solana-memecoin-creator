{
  "compilerOptions": {
    "target": "ES2016", // Target modern Node.js versions
    "module": "CommonJS", // Use CommonJS for Node.js compatibility
    "outDir": "./dist", // Output directory for compiled JavaScript
    "rootDir": "./src", // Source directory for TypeScript files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allows default imports from CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references
    "resolveJsonModule": true, // Allow importing JSON files
    "moduleResolution": "node", // Specify module resolution strategy
    "sourceMap": true, // Generate source maps for debugging
    "lib": ["ES2016", "DOM"] // Include necessary library files
  },
  "include": ["src/**/*"], // Files to include in compilation
  "exclude": ["node_modules", "**/*.spec.ts"] // Files/directories to exclude
}
